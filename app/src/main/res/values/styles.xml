<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Jobline">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AboutTagStyle" parent="Body1">
        <item name="android:background">@color/blue_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Header">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">medium</item>
    </style>

    <style name="Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ColorSwitchStyle">
        <item name="colorControlActivated">@color/blue_light</item>
    </style>

    <style name="Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">medium</item>
    </style>

</resources>
